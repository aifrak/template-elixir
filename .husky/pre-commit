#!/bin/sh

# shellcheck source=.husky/_/husky.sh
. "$(dirname "$0")/_/husky.sh"

if [ -n "$INSIDE_DOCKER" ]; then
  npx lint-staged
  ./run test
else
  ./run dc:build --dev
  ./run dc:up --dev
  ./run dc:exec --dev ./run install-deps
  ./run dc:exec --dev npx lint-staged
  ./run dc:exec --dev ./run test
fi
