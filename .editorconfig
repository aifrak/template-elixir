root = true

[*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 80
quote_type = auto

[{*.ex,*.exs}]
max_line_length = 98

[{*.html.eex,*.html.leex}]
max_line_length = 120

[{run,pre-commit,*.sh}]
binary_next_line = true
switch_case_indent = true

[{Dockerfile*,*.dockerfile}]
binary_next_line = true

[{*.md,*.markdown}]
trim_trailing_whitespace = false
