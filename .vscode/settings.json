{
  // Editor:
  "editor.rulers": [80],
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    ".check.exs": ".check_*.exs",
    ".commitlintrc*": ".cz.*",
    ".eslintrc*": ".eslint*",
    ".gitignore": ".git*",
    ".markdownlint*": ".markdownlintignore",
    ".prettierrc*": ".prettier*",
    ".release-it.*": "VERSION",
    ".stylelintrc*": ".stylelint*",
    "cspell.*": ".cspell*",
    "coveralls.json": "codecov.yml",
    "Dockerfile": ".docker*, docker-compose.*, Dockerfile*",
    "mix.exs": ".formatter.exs, mix.*",
    "package.json": ".npmrc, package-lock.json",
    "README.*": "*.md, LICENSE"
  },

  // Files:
  "files.associations": {
    ".markdownlintignore": "ignore",
    ".sobelow-conf": "elixir",
    "**/.husky/*": "shellscript",
    "run": "shellscript"
  },
  "files.watcherExclude": {
    "**/.git": true,
    "**/.husky/_/**": true,
    // VSCode
    "**/.history/**": true,
    // NodeJS
    "**/node_modules/**": true,
    "**/npm_cache/**": true,
    // Cache for lints
    "**/.prettier-cache": true,
    "**/.stylelintcache": true,
    // Elixir
    "**/_build/**": true,
    "**/.elixir_ls/**": true,
    "**/.sobelow": true,
    "**/.fetch/**": true,
    "**/cover/**": true,
    "**/deps/**": true,
    "**/doc/**": true,
    "**/erl_crash.dump": true,
    // Dialyzer
    "**/dialyzer/plts": true
  },
  "files.exclude": {
    "**/.git": true,
    "**/.history": true
  },

  // Search:
  "search.exclude": {
    "**/.git": true,
    "**/.husky/_": true,
    // VSCode
    "**/.history": true,
    // NodeJS
    "**/node_modules": true,
    "**/npm_cache": true,
    // Cache for lints
    "**/.prettier-cache": true,
    "**/.stylelintcache": true,
    // Elixir
    "**/_build": true,
    "**/.elixir_ls": true,
    "**/.sobelow": true,
    "**/.fetch": true,
    "**/cover": true,
    "**/deps": true,
    "**/doc": true,
    "**/erl_crash.dump": true,
    // Dialyzer
    "**/dialyzer/plts": true
  },

  // Git:
  "git.inputValidationSubjectLength": 100,

  // Prettier:
  "prettier.prettierPath": "./node_modules/prettier",
  "prettier.useEditorConfig": true,

  // CSS:
  "css.validate": false,

  // SASS/SCSS:
  "scss.validate": false,

  // Shellformat:
  "shellformat.useEditorConfig": true,

  // Shellcheck:
  "shellcheck.customArgs": ["-x"],
  "shellcheck.useWorkspaceRootAsCwd": true,

  // Task explorer:
  "taskExplorer.groupSeparator": ":",
  "taskExplorer.exclude": [
    "**/.git/**",
    "**/.husky/_/**",
    // VSCode
    "**/.history/**",
    // NodeJS
    "**/node_modules/**",
    "**/npm_cache/**",
    // Elixir
    "**/_build/**",
    "**/.elixir_ls/**",
    "**/.fetch/**",
    "**/cover/**",
    "**/deps/**",
    "**/doc/**",
    // Dialyzer
    "**/dialyzer/plts/**"
  ],

  // Comments:
  "comment-divider.length": 50,
  // Any changes to "languagesMap" should be done also in devcontainer.json
  // https://github.com/stackbreak/comment-divider/issues/35
  "comment-divider.languagesMap": {
    "elixir": ["#", "#"]
  },
  "comment-divider.lineFiller": "—",
  "comment-divider.mainHeaderFiller": "—",
  "comment-divider.subheaderFiller": "—",
  "commentAnchors.workspace.excludeFiles": "**/{.elixir_ls,.fetch,.git,.husky/_,_build,node_modules,npm_cache,.history,cover,deps}/**/*",
  "commentAnchors.tags.anchors": {
    "TEMP": {
      "iconColor": "pink",
      "highlightColor": "#e84393",
      "scope": "workspace"
    },
    "DEPRECATED": {
      "iconColor": "pink",
      "highlightColor": "#e84393",
      "scope": "workspace"
    },
    "IDEA": {
      "iconColor": "purple",
      "highlightColor": "#ba68c8",
      "scope": "workspace"
    },
    "QUESTION": {
      "iconColor": "purple",
      "highlightColor": "#ba68c8",
      "scope": "workspace"
    },
    "DEBUG": {
      "iconColor": "red",
      "highlightColor": "#F44336",
      "scope": "workspace"
    },
    "WARNING": {
      "iconColor": "orange",
      "highlightColor": "#ffa100",
      "scope": "workspace"
    },
    "FIX": {
      "iconColor": "emerald",
      "highlightColor": "#2ecc71",
      "scope": "file"
    },
    "HACK": {
      "iconColor": "orange",
      "highlightColor": "#ffa100",
      "scope": "workspace"
    },
    "!!!": {
      "iconColor": "#ff2d00",
      "highlightColor": "#ff2d00",
      "scope": "workspace"
    },
    "???": {
      "iconColor": "#3498db",
      "highlightColor": "#3498db",
      "scope": "workspace"
    }
  },

  // Markdown All in One:
  "markdown.extension.orderedList.marker": "one",

  // Conventional Commits:
  "conventionalCommits.autoCommit": false,
  "conventionalCommits.gitmoji": false,
  "conventionalCommits.lineBreak": "\\n",

  // YAML:
  "yaml.schemas": {
    "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json": "cspell.yml"
  },

  // Stylelint:
  "stylelint.validate": ["css", "scss"],

  // Override languages:
  "[dockerfile]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[css][handlebars][html][javascript][json][jsonc][markdown][sass][scss][yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[elixir]": {
    "editor.rulers": [98]
  },
  "[eex][html-eex][html]": {
    "editor.rulers": [120]
  },
  "[git-commit][git-rebase][javascript]": {
    // javascript: Follow rule from eslint-config-airbnb-base
    "editor.rulers": [100]
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },

  // VSCode icons:
  "vsicons.associations.files": [
    {
      "icon": "docker",
      "extensions": [
        "docker-compose.ci.yml",
        "docker-compose.dev.yml",
        "docker-compose.override.yml"
      ],
      "filename": true
    },
    {
      "icon": "markdownlint",
      "extensions": [".markdownlintignore"],
      "filename": true
    }
  ]
}
