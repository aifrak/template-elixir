{
  // Editor:
  "editor.rulers": [80],
  "editor.insertSpaces": true,
  "editor.tabSize": 2,

  // Files:
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.watcherExclude": {
    // VSCode:
    "**/.history/**": true,
    // Elixir:
    "**/_build/**": true,
    "**/.elixir_ls/**": true,
    "**/erl_crash.dump": true
  },

  // Search:
  "search.exclude": {
    "**/node_modules": true,
    "**/.elixir_ls": true
  },

  // Override languages:
  "[elixir]": {
    "editor.rulers": [98]
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "files.trimTrailingWhitespace": false
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Spelling:
  "cSpell.words": ["editorconfig", "hadolint", "markdownlint"],
  "cSpell.ignoreWords": [
    "aifrak",
    "davidanson",
    "esbenp",
    "exiasr",
    "fkirc",
    "jakebecker",
    "nosborn"
  ],

  // Remote:
  "remote.extensionKind": {
    // Markdown
    "shd101wyy.markdown-preview-enhanced": ["ui", "workspace"],
    "yzhang.markdown-all-in-one": ["ui", "workspace"],

    // Comments
    "stackbreak.comment-divider": ["ui", "workspace"]
  },

  // Markdownlint:
  "markdownlint.config": {
    "MD013": true
  },

  // Comment Divider:
  "comment-divider.length": 50,

  // VSIcons:
  "vsicons.associations.files": [
    {
      "icon": "docker",
      "extensions": ["docker-compose.dev.yml", "docker-compose.override.yml"],
      "filename": true,
      "extends": "docker"
    }
  ]
}
